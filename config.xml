<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.applh.smart-grid"
        version   = "1.5">
    <name>Card Grid</name>

    <description>
Smart Card Grid will offer several games. 

// Battle Cards Challenge (2 players) //

    </description>

    <author href="http://Applh.com" email="ipad@applh.com">
        Applh.com
    </author>

   <feature name="http://api.phonegap.com/1.0/media"/>

   <preference name="permissions" value="none"/>

    <preference name="phonegap-version" value="2.5.0" />
    <preference name="orientation"      value="landscape" />
    <preference name="target-device"    value="tablet" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />    
    <preference name="exit-on-suspend"  value="true" />
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
    <preference name="android-minSdkVersion"      value="7" />             <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    

    <icon src="icon.png" />
    <icon src="icon-57.png"            gap:platform="ios"        width="57"   height="57" />
    <icon src="icon-72.png"            gap:platform="ios"        width="72"   height="72" />
    <icon src="icon-114.png"           gap:platform="ios"        width="114"  height="114" />

    <gap:splash src="splash.png" />
    
</widget>
